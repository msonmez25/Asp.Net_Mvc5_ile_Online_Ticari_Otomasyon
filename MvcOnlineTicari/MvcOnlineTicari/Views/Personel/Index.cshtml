@using MvcOnlineTicari.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>PERSONELLER</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>AD</th>
            <th>SOYAD</th>
            <th>TELEFON</th>
            <th>DEPARTMAN</th>
            <th>GÜNCELLE</th>
            <th>SİL</th>
            <th>DETAY</th>
            <th>GÖRSEL</th>
            <th>DURUM</th>
        </tr>
    </thead>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.PersonelAd</td>
            <td>@prs.PersonelSoyad</td>
            <td>@prs.PersonelTelefon</td>
            <td>@prs.Departman.DepartmanAd</td>
            <td>
                <a class="btn btn-success btn-sm" href="/Personel/PersonelGetir/@prs.PersonelID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Güncelle
                </a>
            </td>

            <td>
                @Html.ActionLink("Sil", "PersonelSil",
        new { id = prs.PersonelID },
        new
        {
        @class = "btn btn-danger",
        onclick = "return confirm('Kayıt Pasife Alınacaktır, Devam Etmek İstiyor musunuz?')"
        })
            </td>
            <td>
                <a class="btn btn-success" style="background-color:cadetblue" href="/Departman/DepartmanPersonelSatis/@prs.PersonelID">
                    <i class="fas fa-hand-holding-usd"></i>
                    Satışlar
                </a>
            </td>
            <td>
                <img src="@prs.PersonelGorsel" style="width:75px;height:75px;margin:auto" />
            </td>
            @if (prs.Durum == true)
            {
                <td>Çalışıyor</td>
            }
            @if (prs.Durum == false)
            {
                <td>Ayrıldı</td>
            }
        </tr>
    }
</table>
<br />
<a href="/Personel/PersonelEkle/" class="btn btn-primary">Yeni Perseonel Ekle</a>

