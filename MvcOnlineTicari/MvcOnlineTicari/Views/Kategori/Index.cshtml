@using MvcOnlineTicari.Models.Siniflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<h2>KATEGORİLER</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">            
            <th>KATEGORİ ADI</th>
            <th>DURUM</th>
            <th>GÜNCELLE</th>
            <th>SİL</th>
        </tr>
    </thead>
    @foreach (var ktgr in Model)
    {
        <tr>
            <td>@ktgr.KategoriAd</td>

            @if (ktgr.Durum == true)
            {
                <td>Aktif</td>
            }
            @if (ktgr.Durum == false)
            {
                <td>Pasif</td>
            }

            <td>
                <a class="btn btn-success btn-sm" href="/Kategori/KategoriGetir/@ktgr.KategoriID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Güncelle
                </a>
            </td>

            <td>
                @Html.ActionLink("Sil", "KategoriSil",
        new { id = ktgr.KategoriID },
        new
        {
        @class = "btn btn-danger",
        onclick = "return confirm('Kayıt Pasife Alınacaktır, Devam Etmek İstiyor musunuz?')"
        })
            </td>
        </tr>
    }
</table>
<br />
<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>




