@using MvcOnlineTicari.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>SATIŞLAR</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>MARKA</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>FİYAT</th>
            <th>ADET</th>
            <th>TOPLAM TUTAR</th>
            <th>TARİH</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
        </tr>
    </thead>
    @foreach (var sts in Model)
    {
        <tr>
            <td>@sts.SatisID</td>
            <td>@sts.Urun.UrunAd</td>
            <td>@sts.Urun.Marka</td>
            <td>@sts.Cariler.CariAd @sts.Cariler.CariSoyad</td>
            <td>@sts.Personel.PersonelAd @sts.Personel.PersonelSoyad</td>
            <td>@sts.Fiyat ₺</td>
            <td>@sts.Adet</td>
            <td>@sts.ToplamTutar ₺</td>
            <td>@Convert.ToDateTime(sts.Tarih).ToString("dd/MM/yyyy")</td>
            <td>
                <a class="btn btn-success btn-sm" href="/Satis/SatisGetir/@sts.SatisID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Güncelle
                </a>
            </td>
            <td>
                <a class="btn btn-success" style="background-color:cadetblue" href="/Satis/SatisDetay/@sts.SatisID">
                    <i class="fas fa-info-circle"></i>
                    Detay
                </a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Satis/YeniSatis/" class="btn btn-primary">Yeni Satış Yap</a>

