@using MvcOnlineTicari.Models.Siniflar
@model List<KargoDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>KARGOLAR</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>TAKİP NO</th>
            <th>KARGOYA VEREN</th>
            <th>KARGOYU ALICI</th>
            <th>TARİH</th>
            <th>DETAYLAR</th>
            <th>QR KOD</th>
        </tr>
    </thead>
    @foreach (var krg in Model)
    {
        <tr>
            <td>@krg.TakipKodu</td>
            <td>@krg.KargoyaVeren</td>
            <td>@krg.KargoAlici</td>
            <td>@Convert.ToDateTime(krg.Tarih).ToString("dd/MM/yyyy")</td>
            <td>
                <a class="btn btn-success" style="background-color:cadetblue" href="/Kargo/KargoTakip/@krg.TakipKodu">
                    <i class="fas fa-info-circle"></i>
                    Detay
                </a>
            </td>
            <td>
                <a class="btn btn-success" style="background-color: #2c3e50" href="/QR/Index/@krg.TakipKodu">
                    <i class="fas fa-qrcode"></i>
                    QR Ouştur
                </a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Kargo/KargoEkle/" class="btn btn-primary">Yeni Kargo Girişi</a>



<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://cdn.datatables.net/1.11.0/js/jquery.dataTables.js"></script>
<link href="https://cdn.datatables.net/1.11.0/css/jquery.dataTables.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });
</script>

