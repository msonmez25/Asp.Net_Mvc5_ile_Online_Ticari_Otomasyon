@using MvcOnlineTicari.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>DEPARTMAN DETAYLAR</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">DEPARTMAN ADI: @ViewBag.d</li>
</ol>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>PERSONEL ID</th>
            <th>PERSONEL AD SOYAD</th>
            <th>DURUMU</th>
            <th>SATIŞLAR</th>
        </tr>
    </thead>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.PersonelID</td>
            <td>@prs.PersonelAd @prs.PersonelSoyad</td>
            @if (prs.Durum == true)
            {
                <td>Çalışıyor</td>
            }
            @if (prs.Durum == false)
            {
                <td>Ayrıldı</td>
            }
            <td>
                <a class="btn btn-success" style="background-color:cadetblue" href="/Departman/DepartmanPersonelSatis/@prs.PersonelID">
                    <i class="fas fa-hand-holding-usd"></i>
                    Satışlar
                </a>
            </td>
        </tr>
    }
</table>
<br />


