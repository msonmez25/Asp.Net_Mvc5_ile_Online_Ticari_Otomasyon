@model MvcOnlineTicari.Models.Siniflar.Departman
@{
    ViewBag.Title = "DepartmanGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>DEPARTMAN GÜNCELLEME SAYFASI</h2>
<br />
@using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>DEPARTMAN ADI</label>
        @Html.TextBoxFor(d => d.DepartmanAd, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(d => d.DepartmanID)
    <div>
        <button class="btn btn-success">Güncelle</button>
    </div>
}

