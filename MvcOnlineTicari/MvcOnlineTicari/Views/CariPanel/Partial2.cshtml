@model MvcOnlineTicari.Models.Siniflar.Cariler

@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
{
    <form class="form-horizontal">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Soyad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Fotograf</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariGorsel, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Meslek</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariMeslek, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Telefon</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariTelefon, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Mail Adresi</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Şartları okudum <a href="#">kabul ediyorum.</a>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-success">Bilgilerimi Güncelle</button>
            </div>
        </div>

    </form>
}
