@using MvcOnlineTicari.Models.Siniflar
@model List<Duyuru>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>DUYURULAR</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>KONU</th>
            <th>İÇERİK</th>
            <th>TARİH</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    @foreach (var dyr in Model)
    {
        <tr>
            <td>@dyr.Kategori</td>
            <td>@dyr.icerik</td>
            <td>@Convert.ToDateTime(dyr.Tarih).ToString("dd/MM/yyyy")</td>


            <td>
                <a class="btn btn-success btn-sm" href="/Duyurular/DuyuruGetir/@dyr.DuyuruID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Güncelle
                </a>
            </td>

        </tr>
    }
</table>
<br />
<a href="/Duyurular/DuyuruEkle/" class="btn btn-primary">Yeni Duyuru Ekle</a>




