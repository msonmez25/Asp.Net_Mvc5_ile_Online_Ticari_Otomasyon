@using MvcOnlineTicari.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>FATURA KALEMLERİ DETAYLAR</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">FATURA ID : @ViewBag.ftr</li>
</ol>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>AÇIKLAMA</th>
            <th>MİKTAR</th>
            <th>BİRİM FİYAT</th>
            <th>TUTAR</th>
        </tr>
    </thead>
    @foreach (var ftr in Model)
    {
        <tr>
            <td>@ftr.Aciklama</td>
            <td>@ftr.Miktar</td>
            <td>@ftr.BirimFiyat ₺</td>
            <td>@ftr.Tutar ₺</td>
        </tr>
    }
</table>
<br />

<a class="btn btn-success" style="background-color:cadetblue" href="/Fatura/KalemEkle/">    
    Yeni Kalem Girişi
</a>


