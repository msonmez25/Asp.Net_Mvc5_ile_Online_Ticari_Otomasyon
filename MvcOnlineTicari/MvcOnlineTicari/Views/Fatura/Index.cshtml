@using MvcOnlineTicari.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>FATURALAR</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>FATURA SERİ - SIRA NO</th>
            <th>VERGİ DAİRESİ</th>
            <th>TARİH/SAAT</th>
            <th>TESLİM EDEN</th>
            <th>TESLİM ALAN</th>
            <th>TOPLAM TUTAR</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
            <th>YENİ KALEM</th>
        </tr>
    </thead>
    @foreach (var ftr in Model)
    {
        <tr>
            <td>@ftr.FaturaSeriNo - @ftr.FaturaSiraNo</td>
            <td>@ftr.VergiDairesi</td>
            <td>@Convert.ToDateTime(ftr.Tarih).ToString("dd/MM/yyyy")/@ftr.Saat</td>
            <td>@ftr.TeslimEden</td>
            <td>@ftr.TeslimAlan</td>
            <td>@ftr.Toplam ₺</td>
            <td>
                <a class="btn btn-success btn-sm" href="/Fatura/FaturaGetir/@ftr.FaturaID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Güncelle
                </a>
            </td>
            <td>
                <a class="btn btn-success" style="background-color:cadetblue" href="/Fatura/FaturaDetay/@ftr.FaturaID">
                    <i class="fas fa-info-circle"></i>
                    Detay
                </a>
            </td>            
            <td>
                <a class="btn btn-success" style="background-color: #2c3e50" href="/Fatura/FaturaDetay/@ftr.FaturaID">
                    <i class="far fa-edit"></i>
                    Kalem
                </a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Fatura/FaturaEkle/" class="btn btn-primary">Yeni Fatura Girişi</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color: #c0392b;color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table-active table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSiraNo</td>
                            <td>@x.Toplam ₺</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>

